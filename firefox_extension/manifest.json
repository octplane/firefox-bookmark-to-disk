{
    "manifest_version": 2,
    "name": "Sync bookmark to disk",
    "version": "1.2",
    "description": "Sync bookmark to disk",
    "icons": {
        "48": "icons/icon.png",
        "96": "icons/icon@2x.png"
    },

    "permissions": [
        "bookmarks",
        "nativeMessaging"
    ],

    "applications": {
        "gecko": {
            "id": "bookmark_to_disk@zoy.org",
            "strict_min_version": "50.0"
        }
    },

    "background": {
        "scripts": ["background.js"]
    }

}
